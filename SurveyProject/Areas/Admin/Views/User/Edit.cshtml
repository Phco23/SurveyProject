@model SurveyProject.Models.UserModel

<div class="container">
    <h4 class="page-title text-primary fw-bold text-center">Edit Account</h4>
    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" placeholder="Enter username" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="RoleId" class="form-label">Role</label>
            <select name="RoleId" class="form-select" asp-items="ViewBag.Roles">
                <option value="">-- Select Role --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary px-5" style="border-radius: 10px;">Save</button>
        <a asp-action="Index" class="btn btn-secondary" style="border-radius: 10px;">Cancel</a>
    </form>
</div>
