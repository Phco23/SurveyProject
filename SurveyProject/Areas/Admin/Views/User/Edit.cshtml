@model IdentityUserModel

<h4 class="page-title text-primary fw-bold text-center">Edit </h4>
<form class="shadow p-4 rounded bg-light">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="UserName" required class="form-control" />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" required class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <br />
            <div class="mb-3">
                <button class="btn btn-primary px-5" style="border-radius: 10px; color: white;">Edit</button>
                <a asp-action="Index" class="btn btn-secondary" style="border-radius: 10px; color: white;">Cancel</a>
            </div>
        </form>
</form>
</div>


