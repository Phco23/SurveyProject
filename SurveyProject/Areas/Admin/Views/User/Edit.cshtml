@model IdentityUserModel

<h4 class="page-title text-primary fw-bold text-center">Edit</h4>
<form asp-action="Edit" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="UserName" required class="form-control" />
        <span asp-validation-for="UserName" class="text-danger" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger" />
    </div>
    <div class="mb-3">
        <label>Password</label>
        <textarea asp-for="PasswordHash" readonly required class="form-control"></textarea>
        <span asp-validation-for="PasswordHash" class="text-danger" />
    </div>
    <div class="mb-3">
        <label>Roles</label>
        <select asp-for="RoleId" class="form-control">
            <option value="">--Choose a role--</option>
            @foreach (var category in ViewBag.RoleCategories)
            {
                <optgroup label="@category.Key">
                    @foreach (var role in category.Value)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </optgroup>
            }
        </select>
        <span asp-validation-for="RoleId" class="text-danger" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary px-5" style="border-radius: 10px; color: white;">Edit</button>
        <a asp-action="Index" class="btn btn-secondary" style="border-radius: 10px; color: white;">Cancel</a>
    </div>
</form>
