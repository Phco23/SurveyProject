<h3>List Product</h3>
<a asp-action="Create" asp-controller="User">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.User.Id</th>
                <td>@item.User.UserName</td>
                <td>@item.User.Email</td>
                <td>@item.RoleName</td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-Id="@item.User.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="User" asp-route-Id="@item.User.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

