<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="~/style.css">
	<!-- Thêm Bootstrap CSS từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
	<!-- Customized Bootstrap Stylesheet -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">




	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand " style="color: #06BBCC;">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<hr>
		<ul class="side-menu top">
			<li>
				<a asp-action="PendingApprovals" asp-controller="Admin" asp-area="Admin">
					<i b-xymbtu3x3q="" class="bx bxs-help-circle" style="color: #06BBCC;"></i>
					<span class="text">PendingApprovals</span>
				</a>
			</li>

			<li class="nav-item">
				<a asp-area="Admin" asp-controller="Admin" asp-action="ManageUsers">
					<i b-xymbtu3x3q="" class="bx bx-user" style="color: #06BBCC;" ></i> 
					<span class="text">Student Account</span>
				</a>
			</li>

			<li>
				<a href="#">
					<i b-xymbtu3x3q="" class="bx bxs-user" style="color: #06BBCC;"></i>
					<span class="text">Faculty Account</span>
				</a>
			</li>

			<li>
				<a asp-action="Index" asp-controller="Survey">
					<i b-xymbtu3x3q="" class="bx bx-note" style="color: #06BBCC;"></i>
					<span class="text">Survey</span>
				</a>
			</li>

			<li>
				<a asp-action="Index" asp-controller="FAQ">
					<i b-xymbtu3x3q="" class="bx bxs-help-circle" style="color: #06BBCC;"></i>
					<span class="text">FAQ</span>
				</a>
			</li>

		</ul>
		<ul class="side-menu">
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<input type="checkbox" id="switch-mode" hidden >
			<label for="switch-mode" class="switch-mode primary"></label>
			
			<i class='bx bx-menu' hidden></i>
			<a href="#" class="nav-link" hidden>Categories</a>
			<form action="#">
				<div class="form-input" hidden>
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
			

			@RenderBody()


			
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->

	<script src="~/script.js"></script>
	@RenderSection("Scripts", required: false)
</body>
	<!-- Thêm Bootstrap JS từ CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</html>