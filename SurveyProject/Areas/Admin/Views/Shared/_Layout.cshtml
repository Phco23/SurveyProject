	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard Account</span>
				</a>
			</li>

			<!-- Liên kết tới Manage Users trong admin menu -->
			<a asp-area="Admin" asp-controller="Admin" asp-action="ManageUsers" class="nav-item nav-link">Manage Users</a>

			<li>
				<a href="#">
					<i b-xymbtu3x3q="" class="bx bxs-user"></i>
					<span class="text">Faculty Account</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i b-xymbtu3x3q="" class="bx bx-user"></i>
					<span class="text">Student Account</span>
				</a>
			</li>
			<li>
				<a asp-action="PendingApprovals" asp-controller="Admin" asp-area="Admin">
					<i b-xymbtu3x3q="" class="bx bxs-help-circle"></i>
					<span class="text">PendingApprovals</span>
				</a>
			</li>


			<li>
				<a asp-action="Index" asp-controller="Survey">
					<i b-xymbtu3x3q="" class="bx bx-note"></i>
					<span class="text">Survey</span>
				</a>
			</li>
			<li>
				<a asp-action="Index" asp-controller="FAQ">
					<i b-xymbtu3x3q="" class="bx bxs-help-circle"></i>
					<span class="text">FAQ</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			@* <li>
				<a href="#">
					<i class='bx bxs-cog'></i>
					<span class="text">Settings</span>
				</a>
			</li> *@
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			
			<i class='bx bx-menu' hidden></i>
			<a href="#" class="nav-link" hidden>Categories</a>
			<form action="#">
				<div class="form-input" hidden>
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			
			@* <a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a> *@
			@* <a href="#" class="profile">
				<img src="img/people.png">
			</a> *@
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
			@* <div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right'></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download'></i>
					<span class="text">Download PDF</span>
				</a>
			</div> *@

			@RenderBody()


			
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->


	<script src="~/script.js"></script>
	
</body>
