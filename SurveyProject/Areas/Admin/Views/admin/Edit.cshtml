@model SurveyProject.Models.IdentityUserModel

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="text-center mb-4">Edit User</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="Edit" method="post" class="border p-4 shadow-sm rounded">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Username</label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control"  />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsApproved" class="form-check-input" type="checkbox" />
        <label asp-for="IsApproved" class="form-check-label">Is Approved</label>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
    </div>
</form>
