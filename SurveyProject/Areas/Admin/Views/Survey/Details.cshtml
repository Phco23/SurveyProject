@using SurveyProject.Models.ViewModels
@model SurveyDetailsViewModel

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header  text-white" style="background-color: #06BBCC;">
                    <h5 class="mb-0" style="color: white; ">Survey Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Title:</strong> @Model.Title</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
            <a asp-controller="Questions" asp-action="Create" asp-route-surveyId="@Model.Id" class="btn btn-primary px-4" 
                style="border-radius: 10px; color: white;">Add Question</a>
        </div>
    </div>
    
    <br>

    

    @if (Model.Questions.Any())
    {
        <div class="row">
            @{
                int i = 1;
            }
            @foreach (var question in Model.Questions)
            {
                <div class="col-md-10 offset-md-1 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white justify-content-between   ">
                            <div>
                                <strong>@i. @question.QuestionText </strong>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id" 
                                class="btn btn-sm btn-warning ms-2"
                                style="border-radius: 10px; color: white;">Edit</a>
                                <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id" 
                                class="btn btn-sm btn-danger ms-2"
                                style="border-radius: 10px; color: white;">Delete</a>
                            </div>

                        </div>
                        <div class="card-body">
                            @if (question.QuestionTypeName != "Text")
                            {
                                <table class="table table-bordered ">
                                    <thead class="table" style="background-color: #6C757D;">
                                        <tr>
                                            <th style="width: 650px; color: white;" >Option Text - @question.QuestionTypeName</th>
                                            <th style="color: white;">Score</th>
                                            <th style="color: white;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var option in question.Options)
                                        {
                                            <tr>
                                                <td class="width: 650px; text-break">@option.OptionText</td>
                                                <td class="width: 650px; text-break">@option.Score</td>
                                                <td >
                                                    <a asp-controller="Questions" asp-action="EditOption" asp-route-id="@option.Id" class="btn btn-sm btn-warning"
                                                        style="border-radius: 10px; color: white;" >Edit</a>
                                                    <form asp-controller="Questions" asp-action="DeleteOption" asp-route-id="@option.Id" method="post" style="display:inline;">
                                                        <button type="submit" class="btn btn-sm btn-danger" style="border-radius: 10px; color: white;">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a asp-controller="Questions" asp-action="AddOption" asp-route-questionId="@question.Id" class="btn btn-sm btn-primary mt-2" 
                                    style="border-radius: 10px; color: white;">Add Option</a>
                            }
                            else
                            {
                                <p class="text-muted">Options are not available for this question type.</p>
                            }
                            
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col text-center">
                <p class="text-muted">No questions available for this survey.</p>
            </div>
        </div>
    }
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">
        <i class="bi bi-arrow-left me-2"></i>Back to Survey List
    </a>
</div>
