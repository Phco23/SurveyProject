@using SurveyProject.Models.ViewModels
@model SurveyDetailsViewModel

<form class="shadow p-4 rounded bg-light">
    <div class="container mt-5">
        <!-- Survey Information -->
        <div class="row mb-4">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-header text-white" style="background-color: #06BBCC;">
                        <h5 class="mb-0" style="color: white;">Survey Information</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Title:</strong> @Model.Title</p>
                        <p><strong>Description:</strong> @Model.Description</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Question Button -->
        <div class="row mb-4">
            <div class="col text-center">
                <a asp-controller="Questions" asp-action="Create" asp-route-surveyId="@Model.Id" class="btn btn-primary px-4 py-2 rounded-pill" style="color: white;">
                    <i class="bi bi-plus-circle me-2"></i>Add Question
                </a>
            </div>
        </div>

        <!-- Questions List -->
        @if (Model.Questions.Any())
        {
            <div class="row">
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var question = Model.Questions[i];
                    <div class="col-md-10 offset-md-1 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                                <strong>@(i + 1). @question.QuestionText</strong>
                                <div>
                                    <a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-warning btn-sm rounded-pill text-white me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger btn-sm rounded-pill text-white">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (question.QuestionTypeName != "Text")
                                {
                                    <!-- Options Table -->
                                    <table class="table table-bordered table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Option Text</th>
                                                <th>Score</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var option in question.Options)
                                            {
                                                <tr>
                                                    <td>@option.OptionText</td>
                                                    <td>@option.Score</td>
                                                    <td>
                                                        <a asp-controller="Questions" asp-action="EditOption" asp-route-id="@option.Id" class="btn btn-warning btn-sm rounded-pill text-white me-2">
                                                            <i class="bi bi-pencil-square"></i> Edit
                                                        </a>
                                                        <form asp-controller="Questions" asp-action="DeleteOption" asp-route-id="@option.Id" method="post" class="d-inline">
                                                            <button type="submit" class="btn btn-danger btn-sm rounded-pill text-white">
                                                                <i class="bi bi-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <!-- Add Option Button -->
                                    <div class="mt-2">
                                        <a asp-controller="Questions" asp-action="AddOption" asp-route-questionId="@question.Id" class="btn btn-primary btn-sm rounded-pill text-white">
                                            <i class="bi bi-plus-circle"></i> Add Option
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">Options are not available for this question type.</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- No Questions -->
            <div class="row">
                <div class="col text-center">
                    <p class="text-muted">No questions available for this survey.</p>
                </div>
            </div>
        }

        <!-- Back to Survey List -->
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-link">
                <i class="bi bi-arrow-left me-2"></i>Back to Survey List
            </a>
        </div>
    </div>
</form>
