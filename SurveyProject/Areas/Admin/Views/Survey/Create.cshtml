@model SurveyModel

<div class="container mt-5">
    <h4 class="page-title text-primary fw-bold text-center">Create Survey</h4>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter the title" />
                    <span asp-validation-for="Title" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a description"></textarea>
                    <span asp-validation-for="Description" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Expired Date</label>
                    <input asp-for="ExpiredDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpiredDate" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label for="RoleId"  class="form-label">Assign Role</label>
                    <select id="AssignedRole" name="selectedRoleId" class="form-control" required>
                        @foreach (var role in ViewBag.Roles as SelectList)
                        {
                            <option value="@role.Value">@role.Text</option>
                        }
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger" />
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-sm btn-primary mt-2" style="border-radius: 10px; color: white;background-color: #06BBCC;">
                        Create
                    </button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">
                    <i class="bi bi-arrow-left me-2"></i>Back 
                </a>
            </div>
        </div>
    </div>
</div>
