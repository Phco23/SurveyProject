@model SurveyModel

<div class="container mt-5">
    <h4 class="mb-4 text-center">Create Survey</h4>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter the title" />
                    <span asp-validation-for="Title" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a description"></textarea>
                    <span asp-validation-for="Description" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Expired Date</label>
                    <input asp-for="ExpiredDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpiredDate" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Role Id</label>
                    <input asp-for="RoleId" class="form-control" placeholder="Enter the role ID" />
                    <span asp-validation-for="RoleId" class="text-danger" />
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5">Create</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">Back to List Survey</a>
            </div>
        </div>
    </div>
</div>
