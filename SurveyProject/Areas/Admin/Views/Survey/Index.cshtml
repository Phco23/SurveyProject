@model IEnumerable<SurveyModel>

<h3>List Survey</h3>
<a asp-action="Create" asp-controller="Survey">Add Survey</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Survey Title</th>
            <th scope="col">Survey Description</th>
            <th scope="col">Created Date</th>
            <th scope="col">Expired Date</th>
            <th scope="col">Survey Role  </th>
            <th scope="col">TotalResponses  </th>
            <th scope="col">IsActive  </th>
            <th scope="col">Actions  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>@item.ExpiredDate</td>
                <td>@item.RoleId</td>
                <td>@item.TotalResponses</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-controller="Survey" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-controller="Survey" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-controller="Survey" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>