@model IEnumerable<SurveyModel>

<div class="container mt-4">
    <h3 class="mb-4">List Survey</h3>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" asp-controller="Survey" class="btn btn-primary">Add Survey</a>
    </div>
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Survey Title</th>
                <th scope="col">Survey Description</th>
                <th scope="col">Created Date</th>
                <th scope="col">Expired Date</th>
                <th scope="col">Survey Role</th>
                <th scope="col">Total Responses</th>
                <th scope="col">Is Active</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.ExpiredDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.RoleId</td>
                    <td>@item.TotalResponses</td>
                    <td>
                        <span class="badge @((item.IsActive) ? "bg-success" : "bg-danger")">
                            @(item.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-controller="Survey" asp-route-Id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-controller="Survey" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-controller="Survey" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
