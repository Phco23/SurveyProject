@using SurveyProject.MappingProfiles
@model QuestionDto

<h4>Create Question</h4>
<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="SurveyId" class="control-label">Survey ID</label>
        <input asp-for="SurveyId" class="form-control" readonly />
        <span asp-validation-for="SurveyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionText" class="control-label">Question Text</label>
        <textarea asp-for="QuestionText" class="form-control"></textarea>
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionTypeId" class="control-label">Question Type</label>
        <select asp-for="QuestionTypeId" class="form-control" asp-items="ViewBag.QuestionTypeId"></select>
        <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
    </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Details" asp-controller="Survey" asp-route-id="@Model.SurveyId" class="btn btn-secondary">Cancel</a>
</form>

