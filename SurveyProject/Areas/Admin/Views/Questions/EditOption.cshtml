@model SurveyProject.MappingProfiles.OptionDto

<h2>Edit Option</h2>

<form asp-action="EditOption" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="QuestionId" />

    <div class="form-group">
        <label asp-for="OptionText" class="control-label">Option Text</label>
        <input asp-for="OptionText" class="form-control" />
        <span asp-validation-for="OptionText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Details" asp-controller="Survey" asp-route-id="@ViewBag.SurveyId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

