@model SurveyProject.MappingProfiles.OptionDto

<h2 style="color: #06BBCC;">Add Option</h2>

<form asp-action="AddOption" method="post">
    <!-- Hidden field to pass the QuestionId -->
    <input type="hidden" name="QuestionId" value="@ViewBag.QuestionId" />

    <div class="form-group">
        <label asp-for="OptionText" class="control-label">Option Text</label>
        <input asp-for="OptionText" class="form-control" />
        <span asp-validation-for="OptionText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score" class="control-label">Score</label>
        <input asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="border-radius: 10px; color: white;">Add Option</button>
        <a href="javascript:history.back()" class="btn btn-secondary" style="border-radius: 10px; color: white;">Cancel</a>
    </div>
</form>