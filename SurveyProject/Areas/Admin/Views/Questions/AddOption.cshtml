@model SurveyProject.MappingProfiles.OptionDto

<h2>Add Option</h2>

<form asp-action="AddOption" method="post">
    <!-- Hidden field to pass the QuestionId -->
    <input type="hidden" name="QuestionId" value="@ViewBag.QuestionId" />

    <div class="form-group">
        <label asp-for="OptionText" class="control-label">Option Text</label>
        <input asp-for="OptionText" class="form-control" />
        <span asp-validation-for="OptionText" class="text-danger"></span>
    </div>`

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Option</button>
        <a asp-action="Details" asp-route-id="@ViewBag.QuestionId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
