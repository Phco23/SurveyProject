@using SurveyProject.MappingProfiles
@model QuestionWithOptionsDto
<div class="head-title">
    <div class="left">
        <h1>Dashboard</h1>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" asp-controller="Survey" asp-action="Index">Survey</a>
            </li>
        </ul>
    </div>
    <a href="#" class="btn-download">
        <i class='bx bxs-cloud-download'></i>
        <span class="text">Download PDF</span>
    </a>
</div>
<h2>Question Details</h2>
<p><b>Question:</b> @Model.QuestionText</p>

<h3>Options</h3>
<table class="table">
    <thead>
        <tr>
            <th>Option Text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var option in Model.Options)
        {
            <tr>
                <td>@option.OptionText</td>
                <td>
                    <a asp-action="EditOption" asp-route-id="@option.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteOption" asp-route-id="@option.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AddOption" asp-route-questionId="@Model.Id" class="btn btn-primary">Add Option</a>