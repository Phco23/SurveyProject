@model SurveyProject.Models.FeedbackModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Delete</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this feedback?
</div>

<div>
    <h3>Feedback Content:</h3>
    <p>@Model.Content</p>
    <p><strong>Submitted At:</strong> @Model.SubmittedAt</p>
</div>

<div>
    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageFeedback")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
