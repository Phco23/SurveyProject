@model SurveyProject.Models.FeedbackModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container">
    <h1 class="text-danger text-center">Confirm Delete</h1>

    <p>Are you sure you want to delete this feedback?</p>

    <dl class="row">
        <dt class="col-sm-2">UserName</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Submitted At</dt>
        <dd class="col-sm-10">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
    </dl>

    <form asp-action="DeleteFeedback" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageFeedback", "Feedback")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
