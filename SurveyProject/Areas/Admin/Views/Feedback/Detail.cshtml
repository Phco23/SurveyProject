@model SurveyProject.Models.FeedbackModel

@{
    ViewData["Title"] = "Feedback Detail";
}

<h3 class="text-center mb-4 text-primary fw-bold">Feedback Detail</h3>

<div class="container">
    <div class="shadow p-4 rounded bg-light">
        <!-- Section to display User's feedback -->
        <p class="form-label">Content:</p>
        <textarea class="form-control" rows="5" readonly>@Model.Content</textarea>

        <!-- Section to allow Admin to reply -->
        <form asp-action="SubmitResponse" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <p class="form-label mt-3">Response:</p>
            <textarea class="form-control" name="Response" rows="5" placeholder="Enter your response here..."></textarea>

            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-primary" style="background-color: #06BBCC; border-radius: 10px;">
                    Submit Response
                </button>
            </div>
        </form>
    </div>
</div>
