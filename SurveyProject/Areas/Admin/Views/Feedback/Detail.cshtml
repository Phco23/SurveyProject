@model SurveyProject.Models.FeedbackModel

@{
    ViewData["Title"] = "Feedback Detail";
}

<h3 class="text-center mb-4 text-primary fw-bold">Feedback Detail</h3>

<div class="container">
        <form class="shadow p-4 rounded bg-light">
            <!-- Section to display User's feedback -->
            <p class="form-label">Content:</p>
            <textarea class="form-control" rows="5" readonly>@Model.Content</textarea>
            <!-- Section to allow Admin to reply -->
            <p class="form-label">Response:</p>
            <form asp-action="SubmitResponse" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <!-- Textarea for Admin's response -->
                <textarea class="form-control" name="Response" rows="5"></textarea>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary" style="color: white; background-color: #06BBCC; border-radius: 10px;">
                        Submit Response
                    </button>
                </div>
            </form>
        </form>
</div>
